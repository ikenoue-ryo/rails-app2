<table class="ui striped table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Title</th>
      <th>Created Time</th>
      <th>Updated Time</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= board.id %></td>
      <td><%= board.name %></td>
      <td><%= board.title %></td>
      <td><%= board.created_at.to_s(:datetime_jp) %></td>
      <td><%= board.updated_at.to_s(:datetime_jp) %></td>
    </tr>
  </tbody>
</table>

<p><%= simple_format(board.body) %></p>
