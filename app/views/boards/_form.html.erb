<%= render 'shared/error_messages' %>

<%= form_with model: board do |f| %>
  <div class="ui small form">
    <div class="two fields">
      <div class="field">
        <label>Name</label>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <label>ふりがな</label>
        <%= f.text_field :furigana %>
      </div>
      <div class="field">
        <label>年齢</label>
        <%= f.text_field :age %>
      </div>
      <div class="field">
        <label>症状</label>
        <%= f.text_field :title %>
      </div>
    </div>
  </div>

  <div class="ui small form">
    <div class="two fields">
      <div class="field">
        <label>Address</label>
        <%= f.text_field :address %>
      </div>
      <div class="field">
        <label>TEL</label>
        <%= f.text_field :tel %>
      </div>
      <div class="field">
        <label>E-mail</label>
        <%= f.text_field :email %>
      </div>
    </div>
  </div>

<%= f.date_field :booking %>
<%= f.time_field :booking_time %>

<div class="form-group">
  <p>Tag</p>
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
    <div class="form-check">
      <%= tag.label do %>
        <%= tag.check_box class: 'form-check-input' %>
        <%= tag.text %>
      <% end %>
    </div>
  <% end %>
</div>

  <div class="ui form">
    <div class="field">
      <label>Text</label>
      <%= f.text_area :body, rows: 10 %>
    </div>
  </div>
  <br>

  <%= f.submit '保存', class: 'ui submit button' %>
<% end %>