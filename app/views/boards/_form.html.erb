<%= render 'shared/error_messages' %>

<%= form_for board do |f| %>
  <div class="ui small form">
  <div class="two fields">
    <div class="field">
      <label>First Name</label>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <label>Last Name</label>
      <%= f.text_field :title %>
    </div>
  </div>

タグ
<%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
  <%= tag.label do %>
    <%= tag.check_box %>
    <%= tag.text %>
  <% end %>
<% end %>


  <div class="ui form">
    <div class="field">
      <label>Text</label>
      <%= f.text_area :body, rows: 10 %>
    </div>
  </div>
  <br>

  <%= f.submit '保存', class: 'ui submit button' %>
<% end %>
