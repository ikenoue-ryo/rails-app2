<h1>掲示板一覧</h1>
<%= link_to 'New', new_board_path, class: 'ui right floated button' %>
<br><br>

<% if flash[:notice] %>
  <div class="ui red message"><%= flash[:notice] %></div>
<% end %>
<table class="ui striped table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Title</th>
      <th>Created Time</th>
      <th>Updated Time</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @boards.each do |board| %>
    <tr>
      <td><%= board.id %></td>
      <td><%= board.name %></td>
      <td><%= board.title %></td>
      <td><%= board.created_at.to_s(:datetime_jp) %></td>
      <td><%= board.updated_at.to_s(:datetime_jp) %></td>
      <td><%= link_to '詳細', board %></td>
      <td><%= link_to '削除', board, method: :delete %></td>
    </tr>
    <tr>
  <% end %>

  </tbody>
</table>

<%= paginate @boards %>
<br><br>