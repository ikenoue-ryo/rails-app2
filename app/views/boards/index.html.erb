<h1>掲示板一覧</h1>
<a href="/boards/new">
  <button class="ui right floated button">New</button>
</a>
<br><br>

<table class="ui striped table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Title</th>
      <th>Created Time</th>
      <th>Updated Time</th>
    </tr>
  </thead>
  <tbody>
  <% @boards.each do |board| %>
    <tr>
      <td><%= board.id %></td>
      <td><%= board.name %></td>
      <td><%= board.title %></td>
      <td><%= board.created_at.to_s(:datetime_jp) %></td>
      <td><%= board.updated_at.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
  <% end %>

  </tbody>
</table>