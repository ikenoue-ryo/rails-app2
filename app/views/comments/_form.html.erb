<%= render 'shared/error_messages' %>

<%= form_for comment do |f| %>
  <%= f.hidden_field :board_id %>
  <div class="ui small form">
    <div class="two fields">
      <div class="field">
        <label>Name</label>
        <%= f.text_field :name %>
      </div>
    </div>
  </div>

  <div class="ui form">
    <div class="field">
      <label>Comment</label>
      <%= f.text_area :comment, rows: 10 %>
    </div>
  </div>
  <br>

  <%= f.submit '送信', class: 'ui submit button' %>
<% end %>