<%= form_with model: info do |f| %>
  <div class="ui small form">
    <div class="two fields">
      <div class="field">
        <label>Name</label>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <label>ふりがな</label>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label>年齢</label>
        <%= f.text_field :body %>
      </div>
    </div>
  </div>

  <%= f.submit '保存', class: 'ui submit button' %>
<% end %>