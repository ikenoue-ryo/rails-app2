<%= render 'shared/error_messages' %>

<%= form_with model: info do |f| %>
  <div class="ui small form">
    <div class="two fields">
      <div class="field">
        <label>Name</label>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <label>タイトル</label>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <label>URL</label>
        <%= f.text_field :youtube_url %>
      </div>
      <div class="field">
        <label>本文</label>
        <%= f.text_field :body %>
      </div>
    </div>
  </div>

  <%= f.submit '保存', class: 'ui submit button' %>
<% end %>