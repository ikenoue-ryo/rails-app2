<h1>予約スケジュール</h1>

<div class="content text-right">
  <a class="js-modal-open ui blue label book_label" href="">
    New
  </a>
</div>
<div class="modal js-modal">
  <div class="modal__bg js-modal-close">
  </div>
    <div class="modal__content">
      <div>
        <%= form_with(model: @plan, local: true) do |f| %>
          <div class="ui small form grid form_g">
            <div class="fields sixteen wide column form_column">
              <!-- タイトル -->
              <div class="field my-3">
                <%= f.label :title %>
                <%= f.text_field :title %>
              </div>
              <!-- 予約日 -->
              <%= f.label :start_time %>
              <div class="two fields ml-0">
              <!-- 予約日時 -->
                  <%= f.datetime_field :start_time, :class => 'ui calendar four wide column mr-4', :id => "example3" %>
              </div>
              <!-- テキストエリア -->
                <%= f.label :content %>
                <%= f.text_area :content %>
            </div>
          </div>

          <div class="form_submit text-center">
            <%= f.submit '作成', class: 'ui submit button' %>
          </div>
        <% end %>
      </div>
  </div>
</div>



<%= month_calendar events: @plans do |date,plans| %>
  <%= date.day %>

  <% plans.each do |plan| %>
    <div>
      <%= link_to plan.title, plan %>
    </div>
  <% end %>
<% end %>



<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.title %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan.id) %></td>
        <td><%= link_to 'Destroy',plan_path(plan.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<script>
  $(function(){
      $('.js-modal-open').on('click',function(){
          $('.js-modal').fadeIn();
          return false;
      });
      $('.js-modal-close').on('click',function(){
          $('.js-modal').fadeOut();
          return false;
      });
  });
</script>

<script>
$('#example1').calendar({
  type: 'date',
  formatter: {
    date: function(date){
      var day = ('0' + date.getDate()).slice(-2);
      var month = ('0' + (date.getMonth() + 1)).slice(-2);
      var year = date.getFullYear();
      return year + '/' + month + '/' + day;
    }
  }
});

$('#example3').calendar({
  type: 'time'
});
</script>