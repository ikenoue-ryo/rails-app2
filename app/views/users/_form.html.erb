<%= render 'shared/error_messages' %>

<%= form_for user do |f| %>
  <div class="ui small form">
  <div class="two fields">
    <div class="field">
      <label>ユーザー名</label>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <label>パスワード</label>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <label>パスワード(確認)</label>
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <%= f.submit '作成', class: 'ui submit button' %>
<% end %>
